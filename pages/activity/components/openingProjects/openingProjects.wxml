<view class="weui-panel__hd">
  All Opening Projects</view>

<view class="weui-search-bar {{inputShowed ? 'weui-search-bar_focusing' : ''}}" id="searchBar">
  <form class="weui-search-bar__form">
    <view class="weui-search-bar__box">
      <i class="weui-icon-search"></i>
      <input type="text" class="weui-search-bar__input" placeholder="Search" value="{{inputVal}}" focus="{{inputShowed}}" />
      <span class="weui-icon-clear" wx:if="{{inputVal.length > 0}}" bindtap="clearInput"></span>
    </view>
    <label class="weui-search-bar__label" bindtap="showInput">
      <i class="weui-icon-search"></i>
      <span class="weui-search-bar__text">Search</span>
    </label>
  </form>
  <view class="weui-search-bar__cancel-btn" bindtap="hideInput">Cancel</view>
</view>

<view id="project1" class="weui-media-box weui-media-box_text">
  <title-card img='../../images/love2.jpg' title='Runing Project 1' context="Runing Project 1" isShowBtns='{{false}}'></title-card>
</view>
